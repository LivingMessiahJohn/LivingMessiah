
<div class="d-flex justify-content-center">

	<div class="card @width border border-success border-3 rounded-top text-center mb-3 mt-3">

		@* <div class="card border-success mt-5 mb-3 "></div> *@
		<div class="card-header bg-success">
			<h2 class="text-center text-white ">
				Hebrew Class
			</h2>
		</div>

		<div class="body">
			<h5 class="text-center p-3">
				Bney Yosef North America Hebrew Class
			</h5>
		</div>

		<div class="card-footer">
			<div class="text-center">
				<a href="@PDF" target="_blank" title=""
