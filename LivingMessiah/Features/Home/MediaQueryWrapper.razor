<div class="@MediaQuery.SmOrMdOrLgOrXl.DivClass">
	<div class="d-flex justify-content-evenly">
		<ShabbatMeter IsXsOrSm=IsXsOrSm />
		<LunarMoonCard LunarMonth="LunarMonth" DaysToGo="DaysToGo" DaysOld="DaysOld" />
	</div>
