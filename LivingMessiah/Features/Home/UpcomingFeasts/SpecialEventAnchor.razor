@if (!String.IsNullOrEmpty(Index))
{
	<a href='@Index' class='btn @ButtonSize btn-outline-primary'
		 title='Special Event for @Title'>
		Sukkot 2025
		<i class='fas fa-chevron-circle-right'></i>
	</a>
}

@code {
	[Parameter, EditorRequired] public string Title { get; set; }
	[Parameter, EditorRequired] public string Index { get; set; }
	[Parameter, EditorRequired] public bool IsXs { get; set; }

	protected string ButtonSize => IsXs ? " btn-xs " : " btn-lg ";
}
