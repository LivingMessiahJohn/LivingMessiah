@using LivingMessiah.Features.Calendar.Enums

@if (LunarMonth is not null)
{
  <br />
  <div class="row g-0 bg-body-secondary position-relative">

    <div class="col-md-5 mb-md-0 p-md-4">
      <img src='/images/azimuth-zenith.jpg' class="w-100" alts="Moon coordinates">
    </div>

    <div class="col-md-7 p-2 ps-md-0">
      <div class="card">
        <div class="card-header bg-primary-subtle text-center">
          <div class="fs-4">Current Lunar Moon</div>
        </div>
        <div class=" d-flex justify-content-around align-items-center">
          <span class="fs-6 text-black-50">Common Name:</span>
          <span class="fs-3">@LunarMonth?.FullName</span>
          <span class="hebrew30">@LunarMonth?.Hebrew</span>
        </div>
        <div class=" d-flex justify-content-around align-items-center">
          <span class="fs-6 text-black-50">Biblical Name:</span>
          <span class="fs-3">@LunarMonth?.BiblicalName</span>
          <span class="hebrew30">@LunarMonth?.BiblicalHebrew</span>
        </div>
        <div class="card-footer bg-dark-subtle">
          <div class="fs-4  d-flex justify-content-around">
            <div>@LunarMonth?.Date.ToShortDateString()</div>

            <div>
              @LunarMonth?.CoordinateRecord.MoonriseTime
            </div>

            <div>
              @LunarMonth?.CoordinateRecord.MoonriseAzimuth <i class="fas fa-long-arrow-alt-up"></i>
              <br />
              <span class="fs-6 text-black-50">azimuth rise</span>
            </div>
            
          </div>
        </div>

      </div>
    </div>
  </div>
}
else
{
  <p class="text-danger">LunarMonth is null</p>
}

@code {
  [Parameter, EditorRequired] public LunarMonth? LunarMonth { get; set; }
}