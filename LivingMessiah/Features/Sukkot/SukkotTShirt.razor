@using LivingMessiah.Features.Sukkot.Constants

<h3><span class="badge bg-warning">Sukkot T-shirts!</span> <i class="fas fa-external-link-alt"></i></h3>

@if (TShirts.IsAvailableForSale)
{
	<h5>@TShirts.ForSaleMessage</h5>
	<a href="@TShirts.Href" target="_blank">
		<img src="@TShirts.ImgSrc"
			 alt="@TShirts.Title" class="img-fluid rounded" />
	</a>
}
else
{
	<h1 class="text-warning">@TShirts.ComingSoonMessage</h1>
}

