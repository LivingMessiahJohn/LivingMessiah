@using LivingMessiah.Features.Leadership.Enums
@using LivingMessiah.Features.Leadership.Biographies
@using Syncfusion.Blazor.Navigations

<SfAccordion ExpandMode="ExpandMode.Single">
	<AccordionItems>
		@foreach (var item in Office.List
		.OrderBy(o => o.Sort)
		.Where(w => w.IsFilled == true).ToList())
		{
			<AccordionItem>
				<HeaderTemplate>
					<div class="my-1">
						<img src="@Blobs.Leadership(item.IconFile)" class="me-2 rounded-3" />
						@if (item.IsSpouseIncluded)
						{
						<img src="@Blobs.Leadership(item.IconFile2)" class="me-2 rounded-3" />
						}
						<p class="mt-1 mb-2">@item.OfficeHolderName  <b><i>@item.Title</i></b></p>
					</div>
				</HeaderTemplate>
				<ContentTemplate>

					<img src="@Blobs.Leadership(@item.ImageFile)"
							 class="w-100 p-3"
						alt="@item.OfficeHolderName" />

					@if (item.Value == Office.CongregationLeader)
					{
						
						<CongregationLeader />
					}
					else if (item.Value == Office.BeitDin1)
					{
						<BeitDin1 />
					}
					else if (item.Value == Office.BeitDin2)
					{
						<BeitDin2 />
					}
					else if (item.Value == Office.BeitDin3)
					{
						<BeitDin3 />
					}
					else if (item.Value == Office.Elder1)
					{
						<Elder1 />
					}
					else if (item.Value == Office.Elder2)
					{
						<Elder2 />
					}
					else
					{
						<Elder3 />
					}

				</ContentTemplate>
			</AccordionItem>
		}
	</AccordionItems>
</SfAccordion>


<style>
	.e-accordion .e-acrdn-item.e-select > .e-acrdn-header {
		background: #fff3cd !important; /* Optional: keep if you want selected header to be more prominent */
	}
</style>

