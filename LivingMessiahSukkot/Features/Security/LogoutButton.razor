@using AccountEnum = LivingMessiahSukkot.Enums.Account;
@using NavEnum = LivingMessiahSukkot.Enums.Nav

@inject NavigationManager NavigationManager
@inject ILogger<LogoutButton>? Logger


<button type="button"
				class="btn btn-xs btn-outline-info float-end text-black-50 me-2"
				@onclick="ButtonClick">
		<u>@AccountEnum.Logout.Title</u> <i class="@AccountEnum.Logout.Icon"></i>
</button>

@code {
	private void ButtonClick()
	{
		Logger!.LogInformation("{Method}, LogoutIndex: {LogoutIndex}, ReturnURL: {ReturnURL}"
		, nameof(ButtonClick), AccountEnum.Logout.Index, @NavEnum.LandingPage.Index);
		NavigationManager!.NavigateTo($"{AccountEnum.Logout.Index}?returnUrl={@NavEnum.LandingPage.Index}", true);
	}
}