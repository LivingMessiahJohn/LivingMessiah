@page "/profile"

@using Microsoft.AspNetCore.Components.Authorization

<PageHeader PageEnum="Nav.Profile" />

<AuthorizeView>
	<Authorized>
		<Claims />
	</Authorized>
	<NotAuthorized>
		<div class="card border-warning my-5">
			<div class="card-header">Not Authorized</div>
			<div class="card-body">
				<h5 class="">To view <b>@Nav.Profile.Title</b> you need to be logged in.</h5>
				<LoginRedirectButton ReturnUrl="@Nav.Profile.Index" />
			</div>
		</div>
	</NotAuthorized>
</AuthorizeView>
