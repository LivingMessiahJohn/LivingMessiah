@using StepEnums = RCL.Features.Sukkot.Enums.Step

@* @inject ILogger<StepSkeleton>? Logger *@

@switch (CurrentStep)
{
	case var item when item == StepEnums.Registration:
		@RegistrationFormRF
		break;

	case var item when item == StepEnums.Payment:
		@PaymentRF
		break;

	case var item when item == StepEnums.Complete:
		@CompleteRF
		break;

	default:
		<p>Unknown Step type.</p>
		break;
}

@code {
	[Parameter, EditorRequired] public StepEnums? CurrentStep { get; set; }
	[Parameter, EditorRequired] public RenderFragment? RegistrationFormRF { get; set; }
	[Parameter, EditorRequired] public RenderFragment? PaymentRF { get; set; }
	[Parameter, EditorRequired] public RenderFragment? CompleteRF { get; set; }

}
