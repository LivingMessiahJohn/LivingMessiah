@using RoleGroup = LivingMessiahAdmin.Security.Enums.RoleGroup;

@page "/SukkotDashboard"

@using LivingMessiahAdmin.Security.Constants
@using MenuBarEnums = LivingMessiahAdmin.Features.Sukkot.Enums.MenuBar;
@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView Policy=@RoleGroup.Sukkot>
  <Authorized>
    <PageHeaderMenubar MenuBarEnum=MenuBarEnums.Dashboard />
    <Grid />
    <StripeTable />
  </Authorized>
  <NotAuthorized>
    <LoginRedirectCard Nav="Nav.SukkotDashboard" ReturnUrl=@Nav.SukkotDashboard.Index />
    <div class="alert alert-warning text-end" role="alert">
      <small>Not Authorized; Role Group Policy: @RoleGroup.Sukkot</small> 
    </div>
  </NotAuthorized>
</AuthorizeView>


