
@inject ILogger<ActionButtons>? Logger

<div class="row">
  <div class="col-12 my-2">
    <button @onclick="@(e => OnButtonClicked(Enums.Action.TestInsert))"
            title="Action on @CurrentDatabase database"
      class="btn btn-success btn-sm ">
      <i class="fas fa-plus"></i> Test Insert
    </button>
    <button @onclick="@(e => OnButtonClicked(Enums.Action.EmptyLog))"
            title="Action on @CurrentDatabase database"
      class="btn btn-danger btn-sm">
      <i class="fas fa-times"></i> Empty Log
    </button>
  </div>
</div>

@code {
  
  [Parameter, EditorRequired] public Data.Enums.Database? CurrentDatabase { get; set; }
  [Parameter] public EventCallback<Enums.Action> OnActionSelected { get; set; }

  private void OnButtonClicked(Enums.Action action)
  {
    Logger!.LogDebug("{Method}, {Action}", nameof(OnButtonClicked), action);
    OnActionSelected.InvokeAsync(action);
  }
}