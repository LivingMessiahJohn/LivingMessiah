@page "/SpecialEvents"

@using LivingMessiahAdmin.SecurityRoot
@using Microsoft.AspNetCore.Components.Authorization
@using Page = LivingMessiahAdmin.Enums.Nav

<PageHeader PageEnum="Page.SpecialEvents" />

<div class="alert alert-warning text-center" role="alert">
	<b>Note:</b> This page has not yet been ported over from an older version
</div>

<AuthorizeView Policy=@RoleGroup.Announcements>
  <Authorized>
    <div class="alert alert-success text-end" role="alert">
      <small>Authorized: Role Group Policy: @RoleGroup.Announcements</small>
    </div>
  </Authorized>
  <NotAuthorized>
    <div class="alert alert-warning text-end" role="alert">
      <small>Not Authorized; Role Group Policy: @RoleGroup.Announcements</small>
    </div>
    <LoginRedirectCard Nav="Nav.SpecialEvents" ReturnUrl=@Nav.SpecialEvents.Index />
  </NotAuthorized>
</AuthorizeView>

